{
  "name": "promink.nl",
  "version": "1.0.0",
  "description": "Promink Seniorenverhuizing",
  "scripts": {
    "start": "NODE_ENV=production && npm run build",
    "prebuild": "rimraf './dist' && mkdir './dist'",
    "build": "run-s build:*",
    "build:assets": "cpx './src/**/*.{txt,ico,json}' ./dist/",
    "build:html": "cpx './src/**/*.html' ./dist/",
    "build:css": "node ./build/build-css.js",
    "dev": "NODE_ENV=development run-p serve build watch",
    "serve": "http-server './dist/' -c-1 -p 3000",
    "watch": "run-p watch:*",
    "watch:css": "chokidar './src/**/*.scss' --command 'npm run build:css'",
    "watch:html": "chokidar './src/**/*.html' --command 'npm run build:html'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ex-iT/promink.nl.git"
  },
  "author": "Ex-iT",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ex-iT/promink.nl/issues"
  },
  "homepage": "https://github.com/Ex-iT/promink.nl#readme",
  "engines": {
    "node": ">= 8.6.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "chokidar-cli": "^1.2.0",
    "cpx": "^1.5.0",
    "cssnano": "^3.10.0",
    "eslint": "^4.12.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-standard": "^3.0.1",
    "http-server": "^0.10.0",
    "npm-run-all": "^4.1.2",
    "postcss": "^6.0.14",
    "postcss-scss": "^1.0.2",
    "precss": "^2.0.0",
    "rimraf": "^2.6.2"
  }
}
